<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>Inventory</servlet-name>
        <servlet-class>ph.pup.itech.dbtkmgr.controller.Inventory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnprotectedPages</servlet-name>
        <servlet-class>ph.pup.itech.dbtkmgr.controller.UnprotectedPages</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Inventory</servlet-name>
        <url-pattern>/inventory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnprotectedPages</servlet-name>
        <url-pattern>/UnprotectedPages</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnprotectedPages</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnprotectedPages</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnprotectedPages</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
